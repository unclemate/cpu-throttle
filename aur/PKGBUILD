# Maintainer: unclemate
# Contributor: unclemate

pkgname=cpu-throttle
pkgver=0.1.1
pkgrel=1
pkgdesc='Predictive CPU thermal control daemon for Linux using feed-forward prediction control'
url='https://github.com/unclemate/cpu-throttle'
arch=('x86_64')
license=('GPL-3.0-or-later')
depends=('gcc-libs' 'glibc')
makedepends=('cargo')
backup=('etc/cpu-throttle/config.toml')
source=("$pkgname-$pkgver.tar.gz::$url/archive/refs/tags/v$pkgver.tar.gz"
        "$pkgname.service"
        "$pkgname.tmpfiles"
        "$pkgname.install")
# 本地测试：使用 SKIP 跳过校验，正式发布需运行 updpkgsums
b2sums=('SKIP' 'SKIP' 'SKIP' 'SKIP')

# 本地构建模式（uncomment for local testing）:
# source=(".local" "$pkgname.service" "$pkgname.tmpfiles" "$pkgname.install")
# b2sums=('SKIP' 'SKIP' 'SKIP' 'SKIP')
install="$pkgname.install"

prepare() {
    export RUSTUP_TOOLCHAIN=stable
    cd "$pkgname-$pkgver"
    cargo fetch --locked --target "$(rustc -vV | sed -n 's/host: //p')"
}

build() {
    export RUSTUP_TOOLCHAIN=stable
    export CARGO_TARGET_DIR=target
    cd "$pkgname-$pkgver"
    cargo build --frozen --release --all-features
}

check() {
    export RUSTUP_TOOLCHAIN=stable
    cd "$pkgname-$pkgver"
    cargo test --frozen --all-features
}

package() {
    cd "$pkgname-$pkgver"

    # 安装二进制文件
    install -Dm0755 -t "$pkgdir/usr/bin/" "target/release/$pkgname"

    # 安装配置文件示例
    install -Dm0644 config.example.toml "$pkgdir/etc/cpu-throttle/config.toml"

    # 安装 systemd 服务文件
    install -Dm0644 "$srcdir/$pkgname.service" "$pkgdir/usr/lib/systemd/system/$pkgname.service"

    # 安装 tmpfiles 配置
    install -Dm0644 "$srcdir/$pkgname.tmpfiles" "$pkgdir/usr/lib/tmpfiles.d/$pkgname.conf"

    # 安装文档
    install -Dm0644 README.md "$pkgdir/usr/share/doc/$pkgname/README.md"
    install -Dm0644 CHANGELOG.md "$pkgdir/usr/share/doc/$pkgname/CHANGELOG.md"

    # 安装许可证
    install -Dm0644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
